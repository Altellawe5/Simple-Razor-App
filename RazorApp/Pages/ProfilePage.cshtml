@page
@model ProfilePageModel

<h2>Profile Page</h2>

<div class="containerRegister">
    <form method="post" asp-page-handler="Update">
        <label for="firstname">First Name</label>
        <input id="firstname" name="Customer.FirstName" asp-for="Customer.FirstName" />

        <label for="lastname">Last Name</label>
        <input id="lastname" name="Customer.LastName" asp-for="Customer.LastName" />

        <label for="email">Email</label>
        <input id="email" name="Customer.Email" type="email" asp-for="Customer.Email" />

        <label for="phonenumber">Phone Number</label>
        <input id="phonenumber" name="Customer.PhoneNumber" asp-for="Customer.PhoneNumber" />

        <label for="password">Password</label>
        <input id="password" name="Customer.Password" type="password" asp-for="Customer.Password" />

        <label for="street">Street</label>
        <input id="street" name="Customer.Street" asp-for="Customer.Street" />

        <label for="housenumber">House Number</label>
        <input id="housenumber" name="Customer.HouseNumber" asp-for="Customer.HouseNumber" />

        <label for="busnumber">Bus Number</label>
        <input id="busnumber" name="Customer.BusNumber" asp-for="Customer.BusNumber" />

        <label for="zipcode">Zip Code</label>
        <input id="zipcode" name="Customer.ZipCode" asp-for="Customer.ZipCode" />

        <label for="city">City</label>
        <input id="city" name="Customer.City" asp-for="Customer.City" />

        <label for="country">Country</label>
        <input id="country" name="Customer.Country" asp-for="Customer.Country" />

        <button type="submit">Update</button>
    </form>
</div>

<form method="post" asp-page-handler="Delete">
    <button style="background-color:darkred" type="submit">Delete Account</button>
</form>

